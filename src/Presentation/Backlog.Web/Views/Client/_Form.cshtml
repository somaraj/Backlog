@model ClientModel
@Html.AntiForgeryToken()
<input type="hidden" asp-for="Id" />
<div class="validation-errors"></div>
<div class="row">
    <div class="col-md-12">
        <div class="mb-3">
            <wc-label asp-for="Name" />
            <input asp-for="Name" class="form-control form-control-maxlength" autocomplete="off" maxlength="100" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-12">
        <div class="mb-3">
            <wc-label asp-for="Description" />
            <input asp-for="Description" class="form-control form-control-maxlength" autocomplete="off" maxlength="250" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-12">
        <div class="mb-3">
            <wc-label asp-for="ContactPerson" />
            <input asp-for="ContactPerson" class="form-control form-control-maxlength" autocomplete="off" maxlength="100" />
            <span asp-validation-for="ContactPerson" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-12">
        <div class="mb-3">
            <wc-label asp-for="PhoneNumber" />
            <input asp-for="PhoneNumber" class="form-control form-control-maxlength" autocomplete="off" maxlength="100" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-12">
        <div class="mb-3">
            <wc-label asp-for="Email" />
            <input asp-for="Email" class="form-control form-control-maxlength" autocomplete="off" maxlength="250" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-12">
        <div class="mb-3">
            <wc-label asp-for="Website" />
            <input asp-for="Website" class="form-control form-control-maxlength" autocomplete="off" maxlength="750" />
            <span asp-validation-for="Website" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="mb-3">
            <label class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" asp-for="Active">
                <wc-label asp-for="Active" />
            </label>
        </div>
    </div>
</div>