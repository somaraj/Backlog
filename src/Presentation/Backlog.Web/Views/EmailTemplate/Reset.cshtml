@model PageModel
@{
    Layout = "~/Views/Shared/_LayoutPartial.cshtml";
}

@if (Model.Valid)
{
    <form asp-action="Reset" data-ajax="true" data-ajax-method="post" data-ajax-begin="ajaxBegin" data-ajax-success="ajaxSuccess" data-ajax-complete="ajaxComplete">
        <div class="row">
            @foreach (var template in Enum.GetValues(typeof(EmailTemplateTypeEnum)))
            {
                <div class="col-md-6">
                    <div class="form-check mt-3">
                        <input class="form-check-input" type="checkbox" id="@template" name="@template" />
                        <label for="@template">@template</label>
                    </div>
                </div>
            }
        </div>
        <div class="mt-3">
            <partial name="_ModalButton" />
        </div>
    </form>
}
else
{
    <div class="alert alert-warning text-center">@Model.Message</div>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="offcanvas">
        <i class="fas fa-ban me-1"></i>@Localize("Button.Cancel")
    </button>
}